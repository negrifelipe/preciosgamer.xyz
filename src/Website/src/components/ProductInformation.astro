---
export interface Props {
    name: string;
    price: number;
    url: string;
    imageUrl: string | undefined;
}

const { name, price, url, imageUrl } = Astro.props as Props;

---

<section class="flex flex-col md:flex-row gap-4">
    <div class="md:w-1/3">
        <img src={imageUrl} class="w-full aspect-square rounded-md border border-neutral-800" />
    </div>
    <aside class="md:w-2/3">
        <h1 class="text-2xl font-semibold">{name}</h1>
        <p class="mt-2 mb-6 text-lg font-bold text-green-500">${price}</p>
        <a target="_blank" class="max-md:block max-md:w-full max-md:text-center px-4 py-2 border border-neutral-800 bg-neutral-800 hover:bg-neutral-700 rounded-md" href={url}>Ver producto en Compra Gamer</a>   
    </aside>
</section>